<h2>List of all Tasks</h2>


<% @tasks.each do |task| %>
  <h2><%= task.name %></h2>
  <p><%= task.details %></p>
  <%= link_to "Delete", task_path(task),
      method: :delete,
      data: { confirm: "Are you sure?" } %>
  <%= link_to "Edit", edit_task_path(task) %>
  <%= link_to "Show", task_path(task) %>
<% end %>
  <%= link_to "Create", new_task_path %>
